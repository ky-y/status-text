{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "preserve",
        "module": "es2022",
        "types": [
            "vite/client"
        ],
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}